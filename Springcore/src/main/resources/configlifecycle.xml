<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
" xmlns:context="http://www.springframework.org/schema/context">
    
    
    <bean class="com.spring.lifecycle.Samosa" name="s1" init-method="init" destroy-method="destroy">
        
        <property name="price" value="10"/>
    
    </bean>
    
    <bean class="com.spring.lifecycle.Pepsi" name="p1">
         <property name="price" value="40"/>
         
        
    </bean>
    <bean class="com.spring.lifecycle.Example" name="example">
    <property name="subject" value="computerScience"/>
    </bean>

</beans>
